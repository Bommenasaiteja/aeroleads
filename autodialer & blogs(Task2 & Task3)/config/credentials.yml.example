# Example credentials file
# Copy this to config/master.key and edit with your actual API keys
# Run: EDITOR=nano rails credentials:edit

twilio:
  account_sid: "your_twilio_account_sid_here"
  auth_token: "your_twilio_auth_token_here"  
  phone_number: "+1234567890"  # Your Twilio phone number

openai:
  api_key: "sk-your-openai-api-key-here"

# To set these up:
# 1. Get Twilio account from https://twilio.com
# 2. Get OpenAI API key from https://platform.openai.com  
# 3. Run: EDITOR=nano rails credentials:edit
# 4. Paste the above with your real values